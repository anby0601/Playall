<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlayAll" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PlayAll" parent="Base.Theme.PlayAll" />

    <style name="CustomActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="white_button_style">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/white_key</item>
    </style>
    <style name="white_button_style2">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/white_key</item>
    </style>
    <style name="white_button_style3">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/white_key</item>
    </style>
    <style name="white_button_style4">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/white_key</item>
    </style>

    <style name="black_key_style">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:background">@drawable/black_key</item>
    </style>
    <style name="black_key_style2">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:background">@drawable/black_key</item>
    </style>
    <style name="black_key_style3">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:background">@drawable/black_key</item>
    </style>
    <style name="black_key_style4">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:background">@drawable/black_key</item>
    </style>

    <style name="transparent_view_style">
        <item name="android:layout_height">140dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ChordGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:columnCount">4</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="ChordTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnSpan">4</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ChordButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">#EEEEEE</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="SelectedTextViewStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">3dp</item>
    </style>
</resources>